@model PendientesProveedores.Models.Local_Pendientes_Proveedores

@{
    ViewBag.Title = "Agregar Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Pendientes", FormMethod.Post, new { @id = "msform" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" >
        <h4 class="text-center">Agregue una nueva factura</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model.FECHA, "Fecha", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="form-group">
            <div class="col-md-6">
                @Html.EditorFor(model => model.FECHA, new { htmlAttributes = new { @class = "form-control" } })  
            </div>
            @Html.ValidationMessageFor(model => model.FECHA, "", new { @class = "text-danger col-md-12 text-center" })
        </div>

        @Html.LabelFor(model => model.LOCAL_GRUPO_CONVENIO, "Proveedor", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="form-group">
            <div class="col-md-4">
                @Html.DropDownListFor(model => Model.proveedorSeleccionado, Model.listaProveedores, new { htmlAttributes = new { @class = "dropdown-menu" } })
            </div>
              @Html.ValidationMessageFor(model => model.LOCAL_GRUPO_CONVENIO, "", new { @class = "text-danger col-md-12" })
        </div>

        @Html.LabelFor(model => model.PENDIENTE_PAGO, "Pendiente de Pago", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="form-group">
            <div class="col-md-4">
                @Html.EditorFor(model => model.PENDIENTE_PAGO, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.PENDIENTE_PAGO, "", new { @class = "text-danger col-md-12" })
        </div>
        @Html.LabelFor(model => model.PENDIENTE_COBRO, "Pendiente de Cobro", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="form-group">
            <div class="col-md-4">
                @Html.EditorFor(model => model.PENDIENTE_COBRO, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.PENDIENTE_COBRO, "", new { @class = "text-danger col-md-12" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a Resumen", "Index")
</div>
